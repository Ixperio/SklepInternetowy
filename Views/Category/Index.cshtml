@{
    ViewBag.Title = "Lista kategoorii";
    ViewBag.navId = 2;
}

@{ 
    <style>
        .mainContent{
            width: 80%;
            height: auto;
            display: grid;
            grid-template-columns: 1fr 1fr 1fr 1fr;
            align-items: flex-start;
            justify-content: space-around;
        }
            .mainContent > a {
                width: 15vw;
                height: 15vw;
                box-shadow: rgba(0,0,0,0.25) 0px 0px 4px 1px;
                background-color: #fff;
                border-radius: 10px;
                color: #000;
                text-decoration: none;
                display: grid;
                place-items: center;
            }
            .mainContent > a > h3{
                font-weight: 500;
                display: grid;
                width: 100%;
                height: 100%;
                color: #000;
                place-items: center;
                font-family: Inter;
            }

    </style>
    <div class="mainContent">
     @{
         foreach (var c in ViewBag.Category)
         {
                <a href="/Product/Category/@c.KategoriaId">
                    <h3>@c.Name</h3>
                </a>
             }
         }
    </div>
   
}
