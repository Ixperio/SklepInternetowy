@model List<Sklep.Models.Zamowienia>

@{
    ViewBag.Title = "CheckOrders";
}

<h2>Orders</h2>

@if (Model != null && Model.Any())
{
    foreach (var order in Model)
    {
        <div class="order-container">
            <div class="form-group">
                <label for="ZamawiajacyId">Ordered by: @order.zamawiajacyId</label>
            </div>
            <div class="form-group">
                <label for="AdresId">Address ID: @order.adresId</label>
            </div>
            <div class="form-group">
                <label for="DostawaId">Delivery ID: @order.dostawaId</label>
            </div>
            <div class="form-group">
                <label for="PlatnoscTypId">Payment Type ID: @order.platnosc_typId</label>
            </div>
            <div class="form-group">
                <label for="WalutaId">Currency ID: @order.walutaId</label>
            </div>
            <div class="form-group">
                <label for="Status">Status: @order.status</label>
            </div>

            <hr />
        </div>
    }
}
else
{
    <p>No orders found.</p>
}

@ViewBag.Message
