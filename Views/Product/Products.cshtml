
@{
    ViewBag.Title = "Products";
    ViewBag.navId = 1;
}

<style>
    .productElement{
        display: grid;
        width: 60%;
        min-width: min-content;
        grid-template-columns: 1fr 1fr 1fr;
        background-color: #fff;
        border-radius: 10px;
        justify-items: left;
        align-items: flex-start;
        color: #000;
        margin-top: 60px;
        padding: 30px;
        box-shadow: rgba(0,0,0,0.25) 0px 0px 4px 1px;
    }
    .ceny{
        display: grid;
        grid-template-columns: 1fr;
        place-items: center;
    }
    .mainContent{
        display: grid;
        grid-template-columns: 10% 90%;
        width: 100%;
        justify-items: center;
        align-items: flex-start;
        grid-column-gap: 50px;
        padding: 30px 30px 30px 30px;
    }
    .items{
        display: grid;
        width: 100%;
        justify-items: center;
        margin-left: -10vw;
      
    }
    .filtry {
        display: grid;
        width: min-content;
        grid-template-columns: 1fr;
        background-color: #fff;
        border-radius: 10px;
        place-items: center;
        color: #000;
        margin-top: 60px;
        padding: 30px;
        box-shadow: rgba(0,0,0,0.25) 0px 0px 4px 1px;
    }
    .button {
        display: grid;
        place-items: center;
        color: #fff;
        background-color: #FC6D84;
        border-radius: 5px;
        padding: 10px 30px 10px 30px;
        font-size: 16px;
        font-weight: 400;
        font-family: Roboto;
        cursor: pointer;
        box-shadow: rgba(0,0,0,0.3) 0px 1px 2px 0px;
        transition: 0.1s;
        width: max-content;
    }
        .button:hover {
            margin-top: -2px;
            box-shadow: rgba(0,0,0,0.3) 0px 3px 2px 0px;
            transition: 0.2s;
            margin-bottom: 2px;
        }
        .icon > img{
            width: 20vh;
            height: 20vh;
        }
        .icon{
            display: grid;
            justify-items: center;
            width: 100%;
        }
    .ceny {
        display: grid;
        justify-items: right;
        width: 100%;
        height: 100%;
    }
    .buyBtn {
        background-color: #FC6D84;
        border-radius: 5px;
        box-shadow: rgba(0,0,0,0.25) 0px 1px 1px 0px;
        display: grid;
        padding: 15px 35px 15px 35px;
        color: #fff;
        font-size: 18px;
        font-weight: 500;
        font-family: Inter;
        cursor: pointer;
    }
    .productName{
        font-size: 32px;
        font-weight: 500;
        font-family: Inter;
        color: #000;
    }
    .productCategory {
        font-size: 24px;
        font-weight: 300;
        font-family: Inter;
        color: #898989;
    }
</style>

<script>
    $(document).ready(function () {
        $.ajaxSetup({
            beforeSend: function (xhr) {
                xhr.setRequestHeader("X-Requested-With", "XMLHttpRequest");
            }
        });
        $(".buyBtn").click(function (event) {
            var productData = {
                ProduktId: 1,
                Liczba: 1
            };

            $.ajax({
                type: "POST",
                url: "/Busket/Add",
                data: JSON.stringify(productData),
                contentType: "application/json; charset=utf-8",
                dataType: "json",
                success: function (result) {
                    alert(result.message);
                }
            });
        });
    });
</script>
<div class="mainContent">
    <div class="filtry">
        <div class="button">Zastosuj filtr</div>
    </div>
    <div class="items">
    @{
        foreach (var p in ViewBag.Products)
        {
            <div class="productElement">
                <div class="icon">
                    <img src="@p.ImageUrl"/>
                </div>
                <div class="data">
                    <div class="productName">@p.Name</div>
                    <div class="productCategory">@p.CategoryName</div>
                    <div class="details"><a href="/Product/Details/@p.Id">Wyświetl szczegóły produktu</a></div>
                </div>
                <div class="ceny">
                    <div class="productCena">Brutto <strong style="color: #FC6D84; font-size: 24px;">@{@p.BruttoPrice}zł/szt.</strong></div>
                    <div class="productCena">Netto <strong style="color: #FC6D84; font-size: 20px;">@{@p.NettoPrice}zł/szt.</strong></div>
                    <div class="info">Ocena @{@p.OpinionValue}/5 </div>
                    <div class="info">Na podstawie @p.OpinionCounter opinni</div>
                    <div class="buyBtn" productId="@p.Id" liczba="1">Dodaj do koszyka</div>
                    <div class="info">Pozostało @p.StoreCount szt.</div>
                </div>

            </div>
        }
    }
        </div>

</div>



