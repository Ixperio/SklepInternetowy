<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Caramel&family=Inter:wght@100..900&display=swap" rel="stylesheet">

</head>
<body>
    <style>
    body {
        width: 100vw;
        height: 100vh;
        display: grid;
        grid-template-rows: 8% 92%;
        padding: 0;
        place-content: flex-start;
        place-items: center;
    }

    .nav {
        width: 100vw;
        max-height: 100px;
        height: auto;
        display: grid;
        align-content: center;
        align-items: center;
        grid-template-columns: min-content max-content auto max-content;
        grid-template-rows: min-content;
        background-color: #fff;
        box-shadow: 0px 4px 4px 0px rgba(0,0,0,0.25);
        grid-column-gap: 30px;
    }

    .logo {
        font-family: "Caramel", cursive;
        font-weight: 500;
        font-style: normal;
        padding-bottom: 20px;
        font-size: 8vh;
        color: #000;
        transform: scale(0.5);
    }

    .content {
        padding: 20px;
        height: max-content;
    }

    .search {
        background-color: #FEA3AF;
        border-radius: 50px;
        height: 50px;
        display: grid;
        grid-template-columns: max-content min-content;
        place-items: center;
        justify-content: space-between;
        padding-left: 20px;
        padding-right: 20px;
        width: 350px;
        margin-left: 50px;
        margin-right: 55px;
    }

    ::placeholder {
        color: #fff;
        font-style: italic;
        font-family: Inter;
        font-weight: 300;
    }

    .search > .search_input {
        border: none;
        color: #fff;
        font-family: Inter;
        background-color: transparent;
        outline: none;
    }

    .search > svg:hover {
        cursor: pointer;
    }

    .navOptions {
        display: grid;
        grid-template-columns: max-content max-content max-content max-content;
        width: 80%;
        place-items: center;
        place-content: center;
        grid-column-gap: 30px;
        font-size: 1.2em;
    }

        .navOptions > .navButton {
            border-radius: 50px;
            background-color: transparent;
            padding: 15px;
            padding-left: 20px;
            transition: 0.1s;
            padding-right: 20px;
            color: #000;
            font-style: italic;
            font-family: Inter;
            cursor: pointer;
            font-size: 1em;
            text-decoration: none;
        }

    .navButtonText {
        color: #000;
        font-style: italic;
        font-family: Inter;
        cursor: pointer;
        font-size: 1em;
        text-decoration: none;
    }

    .navOptions > .navButton[selected] > .navButtonText {
        color: #fff;
        font-style: italic;
        font-family: Inter;
        cursor: pointer;
        font-size: 1em;
        text-decoration: none;
    }

    .navOptions > .navButton:hover > .navButtonText {
        color: #fff;
        font-style: italic;
        font-family: Inter;
        cursor: pointer;
        font-size: 1em;
        text-decoration: none;
    }

    .navOptions > .navButton:hover {
        transition: 0.2s;
        font-style: italic;
        color: #fff;
        font-family: Inter;
        background-color: #FC6D84;
        font-size: 1em;
    }

    .navOptions > .navButton[selected] {
        transition: 0.2s;
        font-style: italic;
        color: #fff;
        font-family: Inter;
        background-color: #FC6D84;
        font-size: 1em;
    }

    .iconsGroup {
        display: grid;
        grid-template-columns: 1fr 1fr 1fr;
        grid-column-gap: 20px;
        width: max-content;
    }

    .icons {
        display: grid;
        grid-template-columns: max-content;
        place-items: center;
        justify-items: center;
        font-family: Inter;
        font-size: 1rem;
        color: #000;
    }

        .icons > h3 {
            font-size: 1rem;
            font-family: Inter;
        }

    .content {
        width: 100%;
        height: 100%;
        display: grid;
        place-items: center;
    }
</style>
        <div class="nav">
            <div class="logo"><img src="@Url.Content("~/Images/Logotyp.PNG")" alt="Słodycze"/></div>
