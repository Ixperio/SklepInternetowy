            </div>
            <div class="navOptions">
                @{
                    switch (ViewBag.navId)
                    {
                        case 1:
                            <div class="navButton" selected>@Html.ActionLink("Asortyment", "Index", "HomeController", new { @class = "navButtonText" })</div>
                            <div class="navButton">Kategorie</div>
                            <div class="navButton">@Html.ActionLink("O nas", "About", "HomeController", new { @class = "navButtonText" })</div>
                            <div class="navButton">@Html.ActionLink("Kontakt", "Contact", "HomeController", new { @class = "navButtonText" })</div>
                            break;
                        case 2:
                            <div class="navButton">@Html.ActionLink("Asortyment", "Index", "HomeController", new { @class = "navButtonText" })</div>
                            <div class="navButton" selected>Kategorie</div>
                            <div class="navButton">@Html.ActionLink("O nas", "About", "HomeController", new { @class = "navButtonText" })</div>
                            <div class="navButton">@Html.ActionLink("Kontakt", "Contact", "HomeController", new { @class = "navButtonText" })</div>
                            break;
                        case 3:
                            <div class="navButton">@Html.ActionLink("Asortyment", "Index", "HomeController", new { @class = "navButtonText" })</div>
                            <div class="navButton">Kategorie</div>
                            <div class="navButton" selected>@Html.ActionLink("O nas", "About", "HomeController", new { @class = "navButtonText" })</div>
                            <div class="navButton">@Html.ActionLink("Kontakt", "Contact", "HomeController", new { @class = "navButtonText" })</div>
                            break;
                        case 4:
                            <div class="navButton">@Html.ActionLink("Asortyment", "Index", "HomeController", new { @class = "navButtonText" })</div>
                            <div class="navButton">Kategorie</div>
                            <div class="navButton">@Html.ActionLink("O nas", "About", "HomeController", new { @class = "navButtonText" })</div>
                            <div class="navButton" selected>@Html.ActionLink("Kontakt", "Contact", "HomeController", new { @class = "navButtonText" })</div>
                            break;
                        default:
                            <div class="navButton">@Html.ActionLink("Asortyment", "Index", "HomeController", new { @class = "navButtonText" })</div>
                            <div class="navButton">Kategorie</div>
                            <div class="navButton">@Html.ActionLink("O nas", "About", "HomeController", new { @class = "navButtonText" })</div>
                            <div class="navButton">@Html.ActionLink("Kontakt", "Contact", "HomeController", new { @class = "navButtonText" })</div>
                            break;
                    }
                }

            </div>
            <div class="iconsGroup">
                <div class="icons">
                    <svg width="46" height="46" viewBox="0 0 46 46" fill="none" xmlns="http://www.w3.org/2000/svg">
